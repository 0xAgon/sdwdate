#!/bin/bash

## This file is part of Whonix.
## Copyright (C) 2012 - 2014 Patrick Schleizer <adrelanos@riseup.net>
## See the file COPYING for copying conditions.

pid="$1"

if [[ "$pid" != *[!0-9]* ]]; then
   true "pid '$pid' is strictly numeric."
else
   echo "pid '$pid' is NOT strictly numeric!"
   exit 1
fi

ps_output="$(ps h --format command "$pid")"

## Example ps_output:
## sudo --non-interactive INLINEDIR=/var/cache/sdwdate/sclockadj /usr/lib/sdwdate/sclockadj --no-verbose --no-debug --no-first-wait --move-min 500000 --move-max 500000 --wait-min 1000000000 --wait-max 1000000000 --add 172807620812

read -r -t 2 first second third fourth _ <<< "$ps_output"

## Example first:
## sudo

## Example third:
## /usr/lib/sdwdate/sclockadj

if [ "$first" = "sudo" ]; then
   if [ "$fourth" = "/usr/lib/sdwdate/sclockadj" ]; then
      echo "kill -sigterm $pid"
      kill -sigterm "$pid"
      exit 0
   fi
fi

echo "Nothing killed. ps_output: $ps_output"
exit 0
